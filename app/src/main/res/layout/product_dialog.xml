<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_with_alpha"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp">
<LinearLayout
    android:layout_centerInParent="true"
    android:background="@drawable/card2"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Thêm sản phẩm"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tên sản phẩm"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:paddingHorizontal="8dp"
        android:hint="Nhập tên sản phẩm"
        android:layout_margin="16dp"
        android:id="@+id/edtProductName"
        android:background="@drawable/text_input_shape"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Giá tiền"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:paddingHorizontal="8dp"
        android:hint="Nhập giá tiền"
        android:layout_margin="16dp"
        android:id="@+id/edtPrice"
        android:background="@drawable/text_input_shape"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tồn kho"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:paddingHorizontal="8dp"
        android:hint="Nhập số lượng"
        android:inputType="number"
        android:id="@+id/edtStock"
        android:layout_margin="16dp"
        android:background="@drawable/text_input_shape"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Mô tả"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:paddingHorizontal="8dp"
        android:hint="Nhập mô tả sản phẩm"
        android:lines="100"
        android:id="@+id/edtDescription"
        android:inputType="textMultiLine"
        android:layout_margin="16dp"
        android:background="@drawable/text_input_shape"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:layout_width="110dp"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:background="@drawable/card2"
            android:text="Thêm"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#3F51B5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="110dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/card2"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#EA131A" />
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>