<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/nen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_gravity="center"
        android:src="@drawable/logo1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="Đăng nhập tài khoản"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="Nhập tài khoản của bạn"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:text="Tài khoản"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:text=""
            android:id="@+id/edtUsername"
            android:hint="Nhập tài khoản của bạn"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_input_shape" />
        />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:text="Mật khẩu"
            android:textSize="16dp"
            android:textStyle="bold" />
        <EditText
            android:text=""
            android:id="@+id/edtPassword"
            android:paddingHorizontal="16dp"
            android:hint="Nhập mật khẩu của bạn"
            android:layout_marginTop="16dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/text_input_shape" />
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="Ghi nhớ"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="@string/forgot_pass"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:background="#2167F3"
        android:text="Đăng nhập"
        android:textSize="20sp"
        app:backgroundTint="@null" />
<LinearLayout
    android:layout_marginHorizontal="16dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Bạn chưa có tài khoản "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvRegister"
        android:textColor="#08B964"
        android:textSize="16sp"
        android:text="@string/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

</LinearLayout>